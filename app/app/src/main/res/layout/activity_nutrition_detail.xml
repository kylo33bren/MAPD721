<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/nestedScrollView"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_nutrition_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Nutrition Details"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="normal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="5dp"
        android:text="Calories"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="5dp"
        android:text="Calories"
        android:id="@+id/txt_calories"

        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:text="Protein"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="5dp"
        android:text="Calories"
        android:id="@+id/txt_protein"

        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:text="Fat"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="5dp"
        android:text="Calories"
        android:id="@+id/txt_fats"

        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:text="Carbs"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="5dp"
        android:text="Calories"
        android:id="@+id/txt_carbs"

        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="normal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Good Nutritions"
        android:textColor="#228B22"
        android:textSize="15dp"
        android:textStyle="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/good_nutritions_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Bad Nutritions"
        android:textColor="#C70039 "
        android:textSize="15dp"
        android:textStyle="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bad_nutritions_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</androidx.core.widget.NestedScrollView>